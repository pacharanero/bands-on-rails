<%- model_class = Gig -%>
<div class="page-header">
  <h1>
    <i class="material-icons">date_range</i>
    <%= t('.title') %>
  </h1>
</div>

<dl class="dl-horizontal col-md-8">
  <dt><strong><%= t('.name') %>:</strong></dt>
  <dd><%= @gig.name %></dd>
  <dt><strong><%= t('.date') %>:</strong></dt>
  <dd><%= @gig.date %></dd>
  <dt><strong><%= t('.venue_id') %>:</strong></dt>
  <dd><%= @gig.venue_id %></dd>
  <dt><strong><%= t('.set_list_id') %>:</strong></dt>
  <dd><%= @gig.set_list_id %></dd>
  <dt><strong><%= t('.notes') %>:</strong></dt>
  <dd><%= @gig.notes %></dd>
  <dt><strong><%= t('.fee') %>:</strong></dt>
  <dd><%= @gig.fee %></dd>
  <dt><strong><%= t('.paid') %>:</strong></dt>
  <dd><%= @gig.paid %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              gigs_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_gig_path(@gig), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              gig_path(@gig),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>

<%- model_class = Gig -%>

<div class="page-header">
  <h1>
    <i class="material-icons">date_range</i>
    <%=t '.title' %>
  </h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Gig ID</th>
      <th>Gig Name/Reference</th>
      <th>Gig Date</th>
      <th>Venue</th>
      <th>Set List</th>
      <th>Notes</th>
      <th>Fee</th>
      <th>Paid?</th>
      <th>Created</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @gigs.each do |gig| %>
      <tr>
        <td><%= link_to gig.id, gig_path(gig) %></td>
        <td><%= link_to gig.name, gig_path(gig) %></td>
        <td><%= gig.date %></td>
        <td><%= gig.venue_id %></td>
        <td><%= gig.set_list_id %></td>
        <td><%= gig.notes %></td>
        <td><%= gig.fee %></td>
        <td><%= gig.paid %></td>
        <td><%= time_ago_in_words(gig.created_at) + " ago" %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      gig_path(gig), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_gig_path(gig), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      gig_path(gig),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_gig_path,
            :class => 'btn btn-primary' %>

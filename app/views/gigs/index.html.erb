<p id="notice"><%= notice %></p>

<h1>Gigs</h1>

<table>
  <thead>
    <tr>
      <th>Venue</th>
      <th>Set list</th>
      <th>Notes</th>
      <th>Fee</th>
      <th>Paid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gigs.each do |gig| %>
      <tr>
        <td><%= gig.venue %></td>
        <td><%= gig.set_list %></td>
        <td><%= gig.notes %></td>
        <td><%= gig.fee %></td>
        <td><%= gig.paid %></td>
        <td><%= link_to 'Show', gig %></td>
        <td><%= link_to 'Edit', edit_gig_path(gig) %></td>
        <td><%= link_to 'Destroy', gig, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


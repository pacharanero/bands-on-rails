<%- model_class = Gig -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:venue_id) %></th>
      <th><%= model_class.human_attribute_name(:set_list_id) %></th>
      <th><%= model_class.human_attribute_name(:notes) %></th>
      <th><%= model_class.human_attribute_name(:fee) %></th>
      <th><%= model_class.human_attribute_name(:paid) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @gigs.each do |gig| %>
      <tr>
        <td><%= link_to gig.id, gig_path(gig) %></td>
        <td><%= gig.venue_id %></td>
        <td><%= gig.set_list_id %></td>
        <td><%= gig.notes %></td>
        <td><%= gig.fee %></td>
        <td><%= gig.paid %></td>
        <td><%=l gig.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      gig_path(gig), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_gig_path(gig), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      gig_path(gig),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_gig_path,
            :class => 'btn btn-primary' %>

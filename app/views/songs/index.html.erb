<%- model_class = Song -%>

<div class="page-header">
  <div class="row">
    <div class="col-lg-9">
      <h1>
        <%= fa_icon('play-circle') %>
        <%=t '.title' %>
      </h1>
      <!-- count of number of songs -->
      <h3><%= @songs.count %> Songs </h3>
    </div>

    <!-- action group for song repertoire -->
    <div class="col-lg-3">
      <%= link_to fa_icon('plus-circle', text: t('.new') ), new_song_path, :class => 'btn btn-success' %>
    </div>
  </div>
</div>

<%= render partial: 'song_list' %>

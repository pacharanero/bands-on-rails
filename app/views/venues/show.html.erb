<%- model_class = Venue -%>
<div class="page-header">
  <h1><%= @venue.name %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= t('.name') %>:</strong></dt>
  <dd><%= @venue.name %></dd>
  <dt><strong><%= t('.location') %>:</strong></dt>
  <dd><%= @venue.location %></dd>
  <dt><strong><%= t(:google_maps_url) %>:</strong></dt>
  <dd><%= link_to 'Map', @venue.google_maps_url, target: :_blank %></dd>
  <dt><strong><%= t('.notes') %>:</strong></dt>
  <dd><%= @venue.notes %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              venues_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_venue_path(@venue), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              venue_path(@venue),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
